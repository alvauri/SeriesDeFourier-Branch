#Importar las librerias
from sympy import symbols, sin, Eq, cos, sqrt, pprint, sympify

# Definir la función
def ingresar_datos():
    # Tomar la cadena que representa la ecuación
    
    # Declarar los simbolos que se van a usar (uso minusculas porque no es una buena practica usar mayusculas para variables)
    a_0, a_1, b_1, w_0, t = symbols('A₀ A₁ B₁ w₀ t')
    
    # Ingresar los parametos de la función
    a_0_valor = input('Ingrese valor de A₀: ')
    a_1_valor = input('Ingrese valor de A₁: ')
    b_1_valor = input('Ingrese valor de B₁: ')
    w_0_valor = input('Ingrese valor de w₀: ' )
    t_valor = input('Ingrese valor de t: ') 
 
    # Imprimir los valores de los coeficientes
    print("Valores de los coeficientes:")
    print("A₀ =", a_0_valor)
    print("A₁ =", a_1_valor)
    print("B₁ =", b_1_valor)
    print("w₀ =", w_0_valor)
    print("t =", t)


#LLamada a la función
ingresar_datos()